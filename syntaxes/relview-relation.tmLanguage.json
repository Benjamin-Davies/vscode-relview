{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RelView Relation",
  "patterns": [
    {
      "include": "#variables"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#other_punctuation"
    }
  ],
  "repository": {
    "variables": {
      "patterns": [
        {
          "name": "variable.other.relview",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.relview",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.relview",
          "match": ":"
        }
      ]
    },
    "other_punctuation": {
      "patterns": [
        {
          "name": "punctuation.other.relview",
          "match": "\\(|\\)|,"
        }
      ]
    }
  },
  "scopeName": "source.relview-relation"
}
