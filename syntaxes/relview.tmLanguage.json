{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "RelView",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#base_functions"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#other_punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.relview",
          "begin": "\\{",
          "end": "\\}"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.relview",
          "match": "\\b(DECL|BEG|END|IF|THEN|ELSE|FI|WHILE|DO|OD|RETURN)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.relview",
          "match": "\\b(TRUE|true|FALSE|false)\\b"
        }
      ]
    },
    "base_functions": {
      "patterns": [
        {
          "name": "keyword.other.relview",
          "match": "\\b(L|O|I|Ln1|On1|L1n|O1n|dom|syq|trans|refl|symm|inj|init|next|succ|point|atom|randomXY|randomcfXY|random|randomperm|empty|unival|eq|incl|cardeq|cardlt|cardleq|cardgt|cardgeq|epsi|cardrel|cardfilter|1-st|2-nd|p-1|p-2|p-ord|i-1|i-2|s-ord|part-f|tot-f|minsets|minsets_upset|maxsets|maxsets_downset)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "begin": "(?=\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b\\s*\\()",
          "end": "\\b\\s*\\(",
          "patterns": [
            {
              "name": "entity.name.function.relview",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
            }
          ]
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.relview",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.relview",
          "match": "=|\\||&|\\+|\\*|/|\\\\|-|\\^"
        }
      ]
    },
    "other_punctuation": {
      "patterns": [
        {
          "name": "punctuation.other.relview",
          "match": "\\(|\\)|,|\\[|\\]|\\[\\||\\|\\]"
        }
      ]
    }
  },
  "scopeName": "source.relview"
}
